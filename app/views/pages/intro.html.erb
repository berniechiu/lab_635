<div class="row">
  <div class="col-md-12">
    <% if admin_signed_in? %>
      <div class="panel panel-primary">
    <% else %>
      <div class="panel panel-default">
    <% end %>
      <div class="panel-heading">
        <h3 class="panel-title">宗旨</h3>
      </div>
      <div class="panel-body">
        <p>
        <% if admin_signed_in? %>
          <%= form_for @focus, url: focuses_path(Focus.first) do |f| %>
            <div class="form-group">
              <%= f.text_area :content, :class => "form-control", :rows => 7 %>
            </div>
            <div class="form-group">
              <%= f.submit "更改", :class => "btn btn-primary" %>
            </div>
          <% end %>
        <% else %>
          <%= @focus.content %>
        <% end %>
        </p>
      </div>
    </div>
  <div>
</div>

